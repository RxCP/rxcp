{
  "name": "api",
  "version": "1.0.0-alpha",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "test": "node ace test"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-console": [
        "error"
      ],
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "5.9.5",
    "@japa/preset-adonis": "1.2.0",
    "@japa/runner": "2.5.0",
    "@types/mjml": "4.7.0",
    "adonis-preset-ts": "2.1.0",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-adonis": "2.1.1",
    "eslint-plugin-prettier": "4.2.1",
    "pino-pretty": "9.3.0",
    "typescript": "4.8.4",
    "youch": "3.2.3",
    "youch-terminal": "2.2.0"
  },
  "dependencies": {
    "@adonisjs/auth": "8.2.3",
    "@adonisjs/bouncer": "2.3.0",
    "@adonisjs/core": "5.9.0",
    "@adonisjs/limiter": "1.0.1",
    "@adonisjs/lucid": "18.3.0",
    "@adonisjs/mail": "8.1.2",
    "@adonisjs/redis": "7.3.2",
    "@adonisjs/repl": "3.1.11",
    "@adonisjs/view": "6.2.0",
    "adonis-lucid-filter": "4.1.0",
    "adonis-lucid-soft-deletes": "1.4.3",
    "is-port-reachable": "3.1.0",
    "luxon": "3.2.1",
    "mjml": "4.13.0",
    "mysql": "2.18.1",
    "phc-argon2": "1.1.4",
    "proxy-addr": "2.0.7",
    "rand-token": "1.0.1",
    "reflect-metadata": "0.1.13",
    "socket.io": "^4.5.3",
    "source-map-support": "0.5.21"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x.x"
  }
}
